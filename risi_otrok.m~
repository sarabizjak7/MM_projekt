function risi_otrok(x_otrok, y_otrok)    % nari≈°e krivuljo, po kateri se giblje otrok in animacijo njegovega    % gibanja                hold on    t = linspace(0, 10, 100);    x = x_otrok(t);    y = y_otrok(t);        % izrisemo krivuljo, po kateri se giblje otrok    plot(x, y, 'MarkerFaceColor', '#0072BD', 'Linewidth', 1.5);    axis equal;               