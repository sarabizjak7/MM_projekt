function animacija(x_otrok, y_otrok, x_igraca, y_igraca)

    % animacija gibanja otroka in igrace po krivulji
    for j = 0 : 0.1 : 10

        x_o = x_otrok(j);
        y_o = y_otrok(j);
        
        j * 10
        
        
        %if j == 0
            %continue
        %else
            %x_i = x_igraca(round(j * 10));
            %y_i = y_igraca(round(j * 10);
        %end

        tocka_o = plot(x_o, y_o, 'ok', 'MarkerFaceColor','k', 'MarkerSize', 5);
        %tocka_i = plot(x_i, y_i, 'or', 'MarkerFaceColor','r', 'MarkerSize', 5);

        pause(0.1);

        delete(tocka_o);
        %delete(tocka_i);

    end

   